#!/bin/sh

echo "- Setting up Services"

# Sort Selection
cp -R ~/.dotfiles/services/Sort\ Selection.workflow ~/Library/Services/
defaults write -g NSUserKeyEquivalents -dict-add "Sort Selection" "@^s"

# Edit in VS Code
cp -R ~/.dotfiles/services/Edit\ in\ VS\ Code.workflow ~/Library/Services/
defaults write -g NSUserKeyEquivalents -dict-add "Edit in VS Code" "@^v"
